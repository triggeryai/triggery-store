{
  "compilerOptions": {
    "target": "es6", // Możesz zmienić na "es2017" lub nowszy, jeśli używasz nowoczesnych funkcji JS
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": false, // Sprawdzanie typów w zależnościach
    "strict": true, // Ścisłe sprawdzanie typów
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true, // Wymuszenie spójności wielkości liter
    "strictNullChecks": true, // Ścisłe sprawdzanie `null` i `undefined`
    "noImplicitAny": true, // Zapobiega automatycznemu przypisywaniu `any` tam, gdzie nie jest określony typ
    "noImplicitReturns": true, // Wymusza jawne określenie wartości zwracanych
    "noImplicitThis": true, // Zapobiega niejawnemu używaniu `this` o typie `any`
    "noUnusedLocals": true, // Wykrywa nieużywane zmienne lokalne
    "noUnusedParameters": true, // Wykrywa nieużywane parametry funkcji
    "strictBindCallApply": true, // Ścisłe sprawdzanie dla metod `bind`, `call` i `apply`
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
